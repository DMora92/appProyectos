<% include partials/_header %>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <% if (typeof(data) !== 'undefined') { %>
          <form action="/updateC/<%= data[0].id_categoria %>" method="POST">
            <div class="form-group">
              <label for="txtNombre">Nombre de Categoría</label>
              <input type="text" id="txtNombre" name="nombre" value="<%= data[0].nombre%>" placeholder="Nombre" class="form-control" autofocus required>
            </div>
            <div class="form-group">
              <label for="txtDescripción">Descripción</label>
             <input type="text" id="txtDescripción" name="descripcion" value="<%= data[0].descripcion%>" placeholder="Descripción" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">
              Guardar Categoría
            </button>
          </form>
        <% } %>
      </div>
    </div>
  </div>
</div>
<% include partials/_footer %>
