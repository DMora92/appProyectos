<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <% if (typeof(data) !== 'undefined') { %>
          <form action="/updateC/<%= data[0].id_categoria %>" method="POST">
            <div class="form-group">
              <label for="txtNombre">Nombre de Categoría</label>
              <input type="text" id="txtNombre" name="nombre" value="<%= data[0].nombre%>" placeholder="Nombre" class="form-control" autofocus required>
            </div>
            <div class="form-group">
                <label for="txtHoras">Horas de Categoría</label>
              <input type="number" id="txtHoras" name="horas" value="<%= data[0].horas%>" placeholder="Horas" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-primary">
              Guardar Categoría
            </button>
          </form>
        <% } else {%>
          <form action="/insert/" method="POST">
            <div class="form-group">
              <label for="txtNombre">Nombre de Categoría</label>
              <input type="text" id="txtNombre" name="nombre" value="" placeholder="Nombre" class="form-control" autofocus required>
            </div>
            <div class="form-group">
                <label for="txtHoras">Horas de Categoría</label>
              <input type="number" id="txtHoras" name="horas" value="" placeholder="Horas" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-primary">
              Guardar Categoría
            </button>
          </form>
        <%} %>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
